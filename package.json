    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/react-dom": "^16.8.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
