{
  "name": "template-webpack-dev",
  "version": "1.0.0",
  "private": true,
  "description": "template project with webpack dev server set up",
  "main": "./src/index.ts",
  "scripts": {
    "start": "node src/server/server.js prod",
    "clientDev": "webpack-dev-server --host 0.0.0.0 --config webpack.dev.js",
    "serverDev": "tsnd --project src/server/tsconfig.json src/server/server.ts dev --transpileOnly",
    "build": "webpack --config webpack.prod.js",
    "test": "jest",
    "testWatch": "jest --watch",
    "coverage": "jest --reporters=\"./test/JestNoOutputReporter.js\" --coverage",
    "eslint": "eslint src test"
  },
